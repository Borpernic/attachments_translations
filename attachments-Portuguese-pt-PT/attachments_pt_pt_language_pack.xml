<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="file" method="upgrade">
  <name>attachments_pt_pt_language_pack</name>
  <version>3.0.1</version>
  <creationDate>2011-09-09</creationDate>
  <author>Jonathan M. Cameron, Jos√© Paulo Tavares (3.0, 2.2), earlier translations by Cauan Cabral and Miguel Real</author>
  <authorEmail>jmcameron@jmcameron.net</authorEmail>
