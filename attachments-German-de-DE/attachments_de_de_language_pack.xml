    <!-- Admin component de-DE language help folder -->
    <files folder="attachments_component/admin/help/de-DE" target="administrator/components/com_attachments/help/de-DE">
      <filename>help.css</filename>
      <filename>help.html</filename>
      <filename>index.html</filename>
