      <filename>de-DE.plg_attachments_attachments_plugin_framework.ini</filename>
      <filename>de-DE.plg_attachments_attachments_plugin_framework.sys.ini</filename>
    </files>

    <!-- Languages for this set of files -->
    <files folder="language/en-GB" target="language/en-GB">
      <filename>en-GB.files_attachments_de_de_language_pack.sys.ini</filename>
    </files>
    <files folder="language/de-DE" target="language/de-DE">
      <filename>de-DE.files_attachments_de_de_language_pack.sys.ini</filename>
    </files>

