    </files>

    <!-- Site component language folder -->
    <files folder="attachments_component/site" target="components/com_attachments/language/de-DE">
      <filename>index.html</filename>
      <filename>de-DE.com_attachments.ini</filename>
    </files>

    <!-- Attachments plugin language files -->
    <files folder="attachments_plugin" target="plugins/content/attachments/language/de-DE">
